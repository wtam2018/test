# Install the app dependencies in a full Node docker image
FROM node:12
WORKDIR /usr/src/app
COPY package.json .
RUN chown node:node /usr/src/app/package.json
RUN chmod 744 /usr/src/app/package.json
USER node

RUN npm install
# If you are building your code for production
RUN npm ci --only=production

# Bundle app source
COPY --chown=node:node . .

USER node
CMD [ "npm", "start" ]


